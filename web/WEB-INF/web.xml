<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/views/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>views/index.xhtml</welcome-file>
    </welcome-file-list>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/views/index.xhtml</form-login-page>
            <form-error-page>/views/error_login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Usuario que gestiona la creación de usuarios, empleados, departamentos.</description>
        <role-name>administrador</role-name>
    </security-role>
    <security-role>
        <description>Coordinador de informática.</description>
        <role-name>coordinador</role-name>
    </security-role>
    <security-role>
        <description>Técnico de informática.</description>
        <role-name>tecnico</role-name>
    </security-role>
    <security-role>
        <description>Empleado solicitante o prestatario.</description>
        <role-name>solicitante</role-name>
    </security-role>
    <security-role>
        <description>Coordinador de inventarios de equipos e insumos.</description>
        <role-name>inventario</role-name>
    </security-role>
    <security-role>
        <description>Generador de reportes.</description>
        <role-name>gerente</role-name>
    </security-role>
    <security-constraint>
        <display-name>AdminViews</display-name>
        <web-resource-collection>
            <web-resource-name>AdminViews</web-resource-name>
            <description>Acceso para administrador</description>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/security/*</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>administrador</role-name>
            <role-name>coordinador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>CoordinatorViews</display-name>
        <web-resource-collection>
            <web-resource-name>CoordinatorViews</web-resource-name>
            <description>Vistas para coordinador de informática</description>
            <url-pattern>/coordinator/*</url-pattern>
            <url-pattern>/inventory/*</url-pattern>
            <url-pattern>/catalogues/*</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>coordinador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>TechnicianViews</display-name>
        <web-resource-collection>
            <web-resource-name>TechnicianViews</web-resource-name>
            <description>Vista de técnico informático</description>
            <url-pattern>/technician/*</url-pattern>
            <url-pattern>/inventory/*</url-pattern>
            <url-pattern>/catalogues/*</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>tecnico</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>PetitionerViews</display-name>
        <web-resource-collection>
            <web-resource-name>PetitionerViews</web-resource-name>
            <description>Vista de empleado solicitante</description>
            <url-pattern>/request/*</url-pattern>
            <url-pattern>/loanrequest/*</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>coordinador</role-name>
            <role-name>tecnico</role-name>
            <role-name>solicitante</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>InventoryViews</display-name>
        <web-resource-collection>
            <web-resource-name>InventoryViews</web-resource-name>
            <description>Vista de personal encargada de stock</description>
            <url-pattern>/inventory/*</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>coordinador</role-name>
            <role-name>tecnico</role-name>
            <role-name>inventario</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ManagementViews</display-name>
        <web-resource-collection>
            <web-resource-name>ManagementViews</web-resource-name>
            <description>Vista de gerente</description>
            <url-pattern>/jasperviews/*</url-pattern>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>gerente</role-name>
            <role-name>coordinador</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
